{
  "name": "wpp-ai",
  "version": "1.0.2",
  "description": "WppAI âœ¨ is a chatbot with some useful functions.",
  "keywords": [
    "typescript"
  ],
  "author": {
    "name": "Gabriel Maia",
    "url": "https://github.com/gabrielmaialva33"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gabrielmaialva33/wpp-ai.git"
  },
  "private": true,
  "license": "MIT",
  "scripts": {
    "clean": "rimraf build",
    "build": "rimraf build && tsup",
    "start": "node build/main.js",
    "start:dev": "nodemon",
    "start:test": "nodemon --watch './**/*.ts' --exec 'ts-node' bin/test.ts",
    "test": "ts-node bin/test.ts",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "db:up": "ts-node -r tsconfig-paths/register ./node_modules/.bin/knex --knexfile ./knexfile.ts migrate:latest",
    "db:down": "ts-node -r tsconfig-paths/register ./node_modules/.bin/knex --knexfile ./knexfile.ts migrate:down",
    "db:seed": "ts-node -r tsconfig-paths/register ./node_modules/.bin/knex --knexfile ./knexfile.ts seed:run",
    "db:reset": "ts-node -r tsconfig-paths/register ./node_modules/.bin/knex --knexfile ./knexfile.ts migrate:rollback --all && ts-node -r tsconfig-paths/register ./node_modules/.bin/knex --knexfile ./knexfile.ts migrate:latest"
  },
  "tsup": {
    "entry": [
      "src/**/*.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "minify": true,
    "bundle": true,
    "outDir": "build"
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "@typescript-eslint/explicit-member-accessibility": "off"
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "devDependencies": {
    "@types/luxon": "^3.3.4",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-adonis": "^2.1.1",
    "eslint-plugin-prettier": "^5.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "yarn-upgrade-all": "^0.7.2"
  },
  "dependencies": {
    "@swc/core": "^1.3.96",
    "@wppconnect-team/wppconnect": "^1.28.2",
    "better-sqlite3": "^9.1.1",
    "dotenv": "^16.3.1",
    "envalid": "^8.0.0",
    "inversify": "^6.0.2",
    "knex": "^3.0.1",
    "luxon": "^3.4.4",
    "objection": "^3.1.2",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  }
}
