{
  "name": "wpp-ai",
  "version": "1.0.0",
  "description": "A simple WhatsApp bot using WPPConnect",
  "keywords": [
    "typescript",
    "template"
  ],
  "author": {
    "name": "Gabriel Maia",
    "url": "https://github.com/gabrielmaialva33"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gabrielmaialva33/wpp-ai.git"
  },
  "engines": {
    "node": ">=22.13.1"
  },
  "private": true,
  "main": "build/src/index.js",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "clean:chrome": "./scripts/cleanup-chrome.sh",
    "build": "rimraf build && tsc",
    "start": "node build/src/index.js",
    "start:dev": "tsx watch ./src/index.ts",
    "dev": "pnpm clean:chrome && pnpm start:dev",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write ."
  },
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/app",
    "rules": {
      "prettier/prettier": "error",
      "unicorn/filename-case": "off"
    }
  },
  "prettier": "@adonisjs/prettier-config",
  "devDependencies": {
    "@adonisjs/eslint-config": "^2.1.2",
    "@adonisjs/prettier-config": "^1.4.5",
    "@adonisjs/tsconfig": "^1.4.1",
    "@swc/core": "1.13.3",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.2.1",
    "@types/node-fetch": "^2.6.13",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-adonis": "^2.1.1",
    "eslint-plugin-prettier": "^5.5.4",
    "nodemon": "^3.1.10",
    "openapi-types": "^12.1.3",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node-cron": "^3.0.11",
    "@wppconnect-team/wppconnect": "^1.37.3",
    "better-sqlite3": "^12.2.0",
    "dotenv": "^17.2.1",
    "envalid": "^8.1.0",
    "form-data": "^4.0.4",
    "jimp": "^1.6.0",
    "luxon": "^3.7.1",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "reflect-metadata": "^0.2.2",
    "source-map-support": "^0.5.21",
    "telegra.ph": "^1.0.1",
    "winston": "^3.17.0"
  }
}
